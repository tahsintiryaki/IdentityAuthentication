
@{
    ViewData["Title"] = "AssignAuthority";
}

<h1>AssignAuthority</h1>

@model List<Identity.Models.ViewModels.AssignAuthorityViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-action="AssignAuthority" asp-controller="Role">
    <table class="table">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                    Role Name
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                    <td>
                        @Model[i].Type
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].Type" />
                        <input type="hidden" asp-for="@Model[i].Value" />

                    </td>
                </tr>
            }


            <tr>
                <td colspan="2">
                    <button>Yetki Ata</button>
                </td>
            </tr>
        </tbody>
    </table>

</form>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}